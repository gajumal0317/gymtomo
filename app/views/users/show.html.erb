


<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
      <% if @user.img? %>                                                              
          <%= image_tag @user.img.thumb.url %>
      <% else %>
          <%= image_tag "default.jpg", :size => '200x200' %>
      <% end %> 
      </div>
      <%= @user.status%>
    </div>
  </aside>
  <div class="col-sm-4">
    <div class="card">
      <%= render 'gyms/gyms', gyms: @gyms %>
    </div>
  </div>
</div>
