
<%= link_to 'new', new_gym_path, class: 'btn btn-lg btn-primary'%>
<%= link_to 'edit', edit_user_path, class: 'btn btn-lg btn-primary'%>
<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
      <% if @user.img? %>                                                              
          <%= image_tag @user.img.url %>
      <% else %>
          <%= image_tag "noimage.jpg" %>
      <% end %> 
      </div>
    </div>
  </aside>
<%#プロフィール#%>
  <div class="col-sm-4">
    <div class="card">
      <%= render 'gyms/gyms', gyms: @gyms %>
    </div>
  </div>
</div>
