<ul class="list-unstyled">
  <% posts.each do |post| %>
    <li class="media mb-3">
      
      <div class="media-body">
        <% if post.user.img? %>                                                              
          <%= image_tag post.user.img.thumb50.url, class: 'user_icon' %>
        <% else %>
          <%= image_tag "default.jpg", :size => '50x50',class: 'user_icon' %>
        <% end %>
        <div>
          <%= link_to post.user.name, user_path(post.user) %> <span class="text-muted">posted at <%= post.created_at %></span>
        </div>
        <div>
          <p><%=safe_join(post.content.split("\n"),tag(:br))%></p>
        </div>
        
          <% if post.img? %>
            <%= image_tag post.img.url %>
          <% end %>
        <div>
          <% if current_user == post.user %>
            <%= link_to "Delete", post, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate posts %>
</ul>