<div class="join-button-wrapper">
  <% if current_user.joinings?(gym) %>
    <%= form_with(model: current_user.gym_users.find_by(gym_id: gym.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :gym_id, gym.id %>
      <%= f.submit '退会', class: 'btn btn-sm resign-button' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.gym_users.build, local: true) do |f| %>
      <%= hidden_field_tag :gym_id, gym.id %>
      <%= f.submit '参加', class: 'btn btn-sm join-button' %>
    <% end %>
  <% end %>
</div>