<% if @users.any? %>
  <ul class="list-unstyled">
    <% @users.each do |user| %>
          <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= user.name %></h3>
      </div>
      <div class="card-body">
      <% if user.img? %>                                                              
          <%= image_tag user.img.url %>
      <% else %>
          <%= image_tag "noimage.jpg" %>
      <% end %> 
      </div>
    </div>
    <% end %>
  </ul>
  <%= paginate @users %>
<% end %>