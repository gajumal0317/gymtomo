    <%= form_with(model: @gym, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.label :ジム名%>
          <%= f.text_area :name, class: 'form-control', rows: 1 %>
        </div>
        <div class="form-group">
        　<%= f.label :住所%>
          <%= f.text_area :address, class: 'form-control', rows: 3 %>
        </div>
        <div class="form-group">
         <%= f.label :画像 %>
         <%= f.file_field :img, class: "image" %>
        </div> 
        <p><%= f.check_box :remove_img %>画像を削除する</p>
         
        <%= f.submit '更新', class: 'btn btn-primary' %>
    <% end %>